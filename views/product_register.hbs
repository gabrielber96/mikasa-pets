        <div class="col">
            <h1 class="text-primary text-center">Registro de Productos</h1>

            <form action="/create-product" method="POST">
                <div class="card">
                    <div class="card-body">
                        <div class="form-outline">
                            <input type="text" id="typeText" class="form-control" name="name" />
                            <label class="form-label" for="typeText">Nombre del Producto</label>
                        </div>
                        <br>
                        <div class="form-outline">
                            <input type="number" id="typeNumber" class="form-control" name="precio" />
