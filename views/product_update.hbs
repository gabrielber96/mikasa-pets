<!-- Aqui el form de los productos --->
<br>
<div class="container ">
    <div class="row row-cols-2 justify-content-center">
        <div class="col">
            <h1 class="text-primary text-center">Actualizar Producto</h1>
            {{#each product}}
            <form action="/update-product/{{id}}" method="POST">
                <div class="card">
                    <div class="card-body">
                        <div class="form-outline">
                            <input type="text" id="typeText" class="form-control" name="name" value="{{name}}" />
                            <label class="form-label" for="typeText">Nombre del Producto</label>
                        </div>
                        <br>
                        <div class="form-outline">
                            <input type="number" id="typeNumber" class="form-control" name="precio" value="{{precio}}" />
                            <label class="form-label" for="typeNumber">Precio del Producto</label>
                        </div>
                        <br>
                        <div class="form-outline">
                            <input type="number" id="typeNumber" class="form-control" name="stock" value="{{stock}}" />
                            <label class="form-label" for="typeNumber">Stock del Producto</label>
                        </div>
                        <br>
                        <div class="form-outline">
                            <input type="text" id="typeText" class="form-control" name="description_simple" value="{{description_simple}}" />
                            <label class="form-label" for="typeText">Descripción del Producto</label>
                        </div>
                        <br>
                        <div class="form-outline">
                            <textarea class="form-control" id="textAreaExample" rows="4"></textarea>
                            <label class="form-label" for="textAreaExample">Descripción</label>
                        </div><br>
                        <input type="hidden" name="description_html" value="{{description_html}}">
                        <div class="ms-1 form-check">
                            <input class="form-check-input" type="checkbox" value="" id="formCheckChecked" checked="">
                            <label class="form-check-label" for="formCheckChecked">Aceptas que usemos tu información
                                para venderla a Facebook.</label>
                        </div>
                        <br><br>
                        <center><button type="submit" class="btn btn-lg  btn-outline-primary">Actualizar</button>
                        </center>
                    </div>

                </div>
            </form>
            {{/each}}
        </div>
    </div>
</div>
<br>