<br>
<div class="container">
<h1 class="text-primary">🐕‍🦺Citas de mis mascotas🐩</h1>
    <div class="table-responsive">
        <table class="table align-middle table-hover">
            <thead>
                <tr>
                    <th scope="col">Codigo</th>
                    <th scope="col">Mi mascota</th>
                    <th scope="col">Servicio contratado</th>
                    <th scope="col">Precio del servicio</th>
                    <th scope="col">Persona responsable</th>
                    <th scope="col">Identificacion(DNI)</th>
                    <th scope="col">Estado</th>
                    <th scope="col">Atención</th>
                    <th scope="col">Acción</th>

                </tr>
            </thead>
            <tbody>
                {{#each citas}}
                <tr>
                    <th scope="row">{{id}}</th>
                    <th>{{pet}}</th>
                    <td>{{product}}</td>
                    <td>{{precio}}</td>
                    <td>{{responsable}}</td>
                    <td>{{dni}}</td>
                    <td class="text-secondary">{{state}}</td>
                    <td class="text-warning"><strong>{{atendido}}</strong></td>
                    <td><a class="btn btn-outline-info btn-rounded" href="/miscitas-seguimiento/{{id}}">Seguimiento</a></td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div><br><br><br><br>
</div>