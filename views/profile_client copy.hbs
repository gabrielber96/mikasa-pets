<div class="row m-5">
    <div class="col-md-3">
        <div class="card">
            <div class="card-header">
                Perfil del empleado de Mikasapet
            </div>
            <div class="card-body">
                <h5 class="card-title">--Nombre Completo</h5>
                <div class="col-5 offset-3">
                    <img src="/img/perfil.png" alt="#" class="img-fluid">
                    <p class="card-text">Cliente</p>
                </div>

                <a href="#" class="btn btn-primary">Editar</a>
                <a href="%" class="btn btn-outline-primary">Eliminar</a>
            </div>
        </div>
    </div>
    <div class="col-md-8 ml-2">
        <div class="card">

            <div class="card-body">
                <h5 class="card-title">Datos del Usuario</h5>
                <form>
                    <div class="row mb-3">
                        <label for="name" class="col-sm-2 col-form-label">Nombres</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" id="name" name="name">
                        </div>
                    </div>
                    <div class="row mb-3">
                        <label for="lastname" class="col-sm-2 col-form-label" >Apellidos</label>
                        <div class="col-sm-10">
                            <input type="password" class="form-control" id="lastname" name="lastname" placeholder="Apellido Completo">
                        </div>
                    </div>
                    <div class="row mb-3">
                        <label for="nick" class="col-sm-2 col-form-label" >Usuario</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" id="nick" name="nick" placeholder="Ingrese su usuario">
                        </div>
                    </div>
                    <div class="row mb-3">
                        <label for="nick" class="col-sm-2 col-form-label" >Email</label>
                        <div class="col-sm-10">
                            <input type="email" class="form-control" id="email" name="email" placeholder="Ingrese su correo">
                        </div>
                    </div>
                    <div class="row mb-3">
                        <label for="password" class="col-sm-2 col-form-label" >Contraseña</label>
                        <div class="col-sm-10">
                            <input type="password" class="form-control" id="password" name="password">
                        </div>
                    </div>
                    <h6>Fecha de Nacimiento</h6>
                    <div class="row row-cols-2">
                        <div class="col">
                            <div class="form-floating">
                                <input type="date" class="form-control" name="birthdata" id="">
                            </div>
                        </div>
                        <div class="col">
                            <div class="form-floating">
                                <input type="number" class="form-control" id="phone_client" name="phone"
                                    placeholder="Celular">
                                <label for="phone_client">Celular</label>
                            </div>
                        </div>
                    </div>
                    <br>
                    <div class="form-floating">
                        <input type="text" class="form-control" id="clientDireccion" name="direction"
                            placeholder="Dirección">
                        <label for="clientDireccion">Dirección</label>
                    </div>
                    <br>
                </form>
            </div>
            <div class="card-footer text-muted">
                @mikasapet 2021
            </div>
        </div>
    </div>
</div>