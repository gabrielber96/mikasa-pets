                            <option value="Gabriel">Gabriel</option>
                            <option value="Apollo">Apollo</option>
                        </select>
                        <br>
                        <br><br>
                        <center><button type="submit" class="btn btn-lg  btn-outline-primary">Validar</button>
                        </center>
                    </div>

                </div>
            </form>

        </div>
    </div>
</div>